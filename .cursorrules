{
  "formatOnSave": true,
  "defaultFormatter": "prettier",
  "typescript": {
    "preferences": {
      "importModuleSpecifier": "non-relative",
      "quoteStyle": "single"
    }
  },
  "javascript": {
    "preferences": {
      "importModuleSpecifier": "non-relative",
      "quoteStyle": "single"
    }
  },
  "files": {
    "exclude": {
      "**/.git": true,
      "**/.next": true,
      "**/node_modules": true,
      "**/dist": true,
      "**/.turbo": true
    },
    "associations": {
      "*.css": "tailwindcss"
    }
  },
  "search": {
    "exclude": {
      "**/node_modules": true,
      "**/.next": true,
      "**/dist": true,
      "**/.turbo": true
    }
  },
  "editor": {
    "tabSize": 2,
    "insertSpaces": true,
    "detectIndentation": true,
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true
  }
} 